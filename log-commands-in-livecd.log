#Decrease xfs volume for root
sudo su
pvs
lvs
mkdir -p /mnt/{newroot,bck}
mount /dev/VolGroup00/rootfsbck /mnt/bck
xfsdump -f /mnt/bck/backup.img /dev/VolGroup00/LogVol00
lvremove /dev/VolGroup00/LogVol00
lvcreate -L 8G -n LogVol00 VolGroup00
mkfs.xfs /dev/VolGroup00/LogVol00
mount /dev/VolGroup00/LogVol00 /mnt/newroot
xfsrestore -f /mnt/bck/backup.img /mnt/newroot/
umount /mnt/bck/
lvremove /dev/VolGroup00/rootfsbck
reboot

#Moving /var to another LVM partition
sudo su
lvs
mkdir -p /mnt/{root,var}
mount /dev/VolGroup00/LogVol00 /mnt/root
mount /dev/VolGroup00/var /mnt/var
cp -ar /mnt/root/var/* /mnt/var
rm -rf /mnt/root/var/*
echo "/dev/mapper/VolGroup00-var /var           xfs    defaults      0 0" >> /mnt/root/etc/fstab
reboot
